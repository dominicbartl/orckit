{
  "name": "@orckit/cli",
  "version": "0.1.0",
  "description": "A powerful process orchestration tool for local development environments with tmux integration",
  "keywords": [
    "orchestration",
    "process-manager",
    "tmux",
    "development",
    "local-dev",
    "workflow",
    "build-tools"
  ],
  "homepage": "https://github.com/dominicbartl/orkkit#readme",
  "bugs": {
    "url": "https://github.com/dominicbartl/orkkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dominicbartl/orkkit.git"
  },
  "license": "MIT",
  "author": "Dominic Bartl",
  "type": "module",
  "bin": {
    "orc": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./webpack": {
      "import": "./dist/plugins/webpack.js",
      "types": "./dist/plugins/webpack.d.ts"
    },
    "./angular": {
      "import": "./dist/plugins/angular.js",
      "types": "./dist/plugins/angular.d.ts"
    },
    "./vite": {
      "import": "./dist/plugins/vite.js",
      "types": "./dist/plugins/vite.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/cli/index.ts",
    "build": "rm -rf dist && tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "dayjs": "^1.11.18",
    "execa": "^9.6.0",
    "js-yaml": "^4.1.0",
    "listr2": "^9.0.5",
    "node-fetch": "^3.3.2",
    "omelette": "^0.4.17",
    "ora": "^9.0.0",
    "strip-ansi": "^7.1.2",
    "tree-kill": "^1.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
